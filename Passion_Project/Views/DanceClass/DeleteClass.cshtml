@model Passion_Project.Models.ClassDto
@{
    ViewBag.Title = "Delete Class";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.css">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f0f8ff; /* Light blue background */
            color: #333; /* Dark gray text */
            padding-top: 20px; /* Add padding to the top of the body */
        }

        .container {
            max-width: 800px; /* Limit container width for better readability */
        }

        h2 {
            color: #ffc107; /* Yellow font color */
            font-weight: bold;
            margin-bottom: 20px;
        }

        .btn-danger {
            background-color: #dc3545; /* Red background */
            border-color: #dc3545; /* Red border */
            border-radius: 50px; /* Rounded button */
            font-weight: bold;
            color: #fff; /* White font color */
        }

            .btn-danger:hover {
                background-color: #c82333; /* Darker red on hover */
            }

        .btn-secondary {
            background-color: #6c757d; /* Gray background */
            border-color: #6c757d; /* Gray border */
            border-radius: 50px; /* Rounded button */
            font-weight: bold;
        }

            .btn-secondary:hover {
                background-color: #5a6268; /* Darker gray on hover */
            }

        .text-center {
            text-align: center; /* Center align text */
        }
    </style>
</head>
<body>

    <div class="container mt-5">
        <div class="row">
            <div class="col">
                <h2 class="text-center">Are you sure you want to delete the Class <strong>@Model.ClassName</strong> from the Studio <strong>@Model.Name</strong>?</h2>
            </div>
        </div>

        <form method="post" action="/DanceClass/Delete/@Model.ClassID">
            @Html.AntiForgeryToken()
            <div class="mt-3 d-flex align-items-center justify-content-end gap-2">
                <div>
                    <button type="submit" class="btn btn-danger btn-lg btn-block">Delete</button>
                </div>
                <div>
                    <a href="/DanceClass/List" class="btn btn-secondary btn-lg btn-block">Cancel</a>
                </div>
            </div>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
