@{
    ViewBag.Title = "Add User";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.css">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f0f8ff;
            color: #333;
        }

        .add-user-container {
            background: #ffffff;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            margin-top: 30px;
        }

        h2 {
            color: #28a745; /* Updated color */
            font-weight: bold;
        }

        .btn-outline-secondary {
            color: #28a745; /* Updated color */
            border-color: #28a745; /* Updated color */
            border-radius: 50px;
            font-weight: bold;
        }

            .btn-outline-secondary:hover {
                background-color: #28a745; /* Updated color */
                color: white;
            }

        .btn-primary {
            background-color: #6fbbd3;
            border: none;
            border-radius: 50px;
            font-weight: bold;
        }

            .btn-primary:hover {
                background-color: #5aa9bc;
            }

        .form-label {
            font-weight: bold;
            color: #333;
        }

        .form-control {
            border-radius: 10px;
            border-color: #28a745; /* Updated color */
        }
    </style>
</head>
<body>

    <div class="container mt-5 add-user-container">
        <div class="row">
            <div class="col">
                <h2 class="text-muted">Add New User</h2>
            </div>
            <div class="col-auto">
                <a href="/DanceClassUser/UserList" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Back To Users</a>
            </div>
        </div>

        <form action="/DanceClassUser/CreateUser" method="POST" class="mt-3">
            @Html.AntiForgeryToken()
            <div class="form-group row">
                <div class="col">
                    <label for="Username" class="form-label">Username:</label>
                    <input type="text" class="form-control" id="Username" name="Username" required>
                </div>
                <div class="col">
                    <label for="Email" class="form-label">Email:</label>
                    <input type="email" class="form-control" id="Email" name="Email" required>
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <label for="Password" class="form-label">Password:</label>
                    <input type="password" class="form-control" id="Password" name="Password" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Add User</button>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
